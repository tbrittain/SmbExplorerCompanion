                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                CanUserReorderColumns="False"
                                CanUserSortColumns="True"
                                CanUserResizeColumns="True"
                                SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        CanUserSort="True"
                                        Header="Season #"
                                        Binding="{Binding SeasonNumber}" />
                                    <DataGridTextColumn
                                        CanUserSort="False"
                                        Header="Team"
                                        Binding="{Binding TeamNames}" />
                                    <DataGridTextColumn
                                        Header="W"
                                        Binding="{Binding Wins}"
                                        CanUserSort="True" />
                                    <DataGridTextColumn
                                        Header="L"
                                        Binding="{Binding Losses}"
                                        CanUserSort="True" />
                                    <DataGridTemplateColumn
                                        CanUserSort="True"
                                        Header="ERA"
                                        SortMemberPath="EarnedRunAverage">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding EarnedRunAverage, StringFormat={}{0:F2}}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        CanUserSort="True"
                                        Header="FIP"
                                        SortMemberPath="Fip">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Fip, StringFormat={}{0:F2}}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn
                                        Header="SV"
                                        Binding="{Binding Saves}"
                                        CanUserSort="True" />
                                    <DataGridTemplateColumn
                                        CanUserSort="True"
                                        Header="IP"
                                        SortMemberPath="InningsPitched">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding InningsPitched, StringFormat={}{0:F1}}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn
                                        Header="K"
                                        Binding="{Binding Strikeouts}"
                                        CanUserSort="True" />
                                    <DataGridTextColumn
                                        Header="BB"
                                        Binding="{Binding Walks}"
                                        CanUserSort="True" />
                                    <DataGridTemplateColumn
                                        CanUserSort="True"
                                        Header="WHIP"
                                        SortMemberPath="Whip">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Whip, StringFormat={}{0:F2}}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        CanUserSort="True"
                                        Header="ERA-"
                                        SortMemberPath="EraMinus">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding EraMinus, StringFormat={}{0:F1}}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        CanUserSort="True"
                                        Header="FIP-"
                                        SortMemberPath="FipMinus">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding FipMinus, StringFormat={}{0:F1}}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn
                                        Header="CG"
                                        Binding="{Binding CompleteGames}"
                                        CanUserSort="True" />
                                    <DataGridTextColumn
                                        Header="CGSO"
                                        Binding="{Binding Shutouts}"
                                        CanUserSort="True" />
                                    <DataGridTemplateColumn
                                        CanUserSort="True"
                                        Header="Cumulative ERA-"
                                        SortMemberPath="WeightedOpsPlusOrEraMinus">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Text="{Binding WeightedOpsPlusOrEraMinus, StringFormat={}{0:F1}}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn
                                        Header="ER"
                                        Binding="{Binding EarnedRuns}"
                                        CanUserSort="True" />
                                    <DataGridTextColumn
                                        Header="TP"
                                        Binding="{Binding TotalPitches}"
                                        CanUserSort="True" />
                                    <DataGridTextColumn
                                        Header="GS"
                                        Binding="{Binding GamesStarted}"
                                        CanUserSort="True" />
                                    <DataGridTextColumn
                                        Header="H"
                                        Binding="{Binding Hits}"
                                        CanUserSort="True" />
                                    <DataGridTextColumn
                                        Header="HR"
                                        Binding="{Binding HomeRuns}"
                                        CanUserSort="True" />
                                    <DataGridTextColumn
                                        Header="HBP"
                                        Binding="{Binding HitByPitch}"
                                        CanUserSort="True" />
                                    <DataGridTextColumn
                                        Header="Awards"
                                        Binding="{Binding DisplayAwards}"
                                        CanUserSort="False" />
                                    <DataGridTemplateColumn
                                        CanUserSort="True"
                                        Header="Salary"
                                        SortMemberPath="TotalSalary">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TotalSalary, StringFormat={}${0:N0}}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>

