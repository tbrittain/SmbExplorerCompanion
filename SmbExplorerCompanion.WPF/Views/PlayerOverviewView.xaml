<UserControl x:Class="SmbExplorerCompanion.WPF.Views.PlayerOverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:SmbExplorerCompanion.WPF.ViewModels"
             xmlns:dataTemplateSelectors="clr-namespace:SmbExplorerCompanion.WPF.DataTemplateSelectors"
             xmlns:players="clr-namespace:SmbExplorerCompanion.WPF.Models.Players"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:PlayerOverviewViewModel}">
    <UserControl.Resources>
        <DataTemplate x:Key="BasicAwardTemplate" d:DataContext="{d:DesignInstance players:FormattedPlayerAward}">
            <Border Background="{Binding Color}" Padding="2" Margin="1">
                <Label
                    Content="{Binding DisplayName}"
                    HorizontalAlignment="Left" />
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="EliteAwardTemplate">
            <Border Background="{Binding Color}" Padding="2" Margin="1">
                <Label
                    Content="{Binding DisplayName}"
                    HorizontalAlignment="Stretch" />
            </Border>
        </DataTemplate>

        <dataTemplateSelectors:AwardTemplateSelector x:Key="AwardTemplateSelector"
                                                     HalfWidthTemplate="{StaticResource BasicAwardTemplate}"
                                                     FullWidthTemplate="{StaticResource EliteAwardTemplate}" />
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel Orientation="Vertical">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Vertical"
                    Margin="0, 0, 0, 15">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="16" Text="Player name:" FontWeight="Bold" Padding="0 ,0 , 5, 0" />
                        <TextBlock Text="{Binding PlayerOverview.PlayerName}" FontSize="16" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" Text="Bats:" FontWeight="Bold" Padding="0 ,0 , 5, 0" />
                        <TextBlock Text="{Binding PlayerOverview.BatHandedness}" FontSize="14" />
                        <TextBlock FontSize="14" Text="•" Padding="5, 0, 5, 0" />
                        <TextBlock FontSize="14" Text="Throws:" FontWeight="Bold" Padding="0 ,0 , 5, 0" />
                        <TextBlock Text="{Binding PlayerOverview.ThrowHandedness}" FontSize="14" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <!-- TODO Will have Navigation here to take us to the current season team page -->
                        <TextBlock FontSize="14" Text="Team:" FontWeight="Bold" Padding="0 ,0 , 5, 0" />
                        <TextBlock Text="{Binding PlayerOverview.CurrentTeam}" FontSize="14" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" Text="Position:" FontWeight="Bold" Padding="0 ,0 , 5, 0" />
                        <TextBlock Text="{Binding PlayerOverview.DisplayPosition}" FontSize="14" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" Text="Chemistry:" FontWeight="Bold" Padding="0 ,0 , 5, 0" />
                        <TextBlock Text="{Binding PlayerOverview.Chemistry}" FontSize="14" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" Text="Career earnings:" FontWeight="Bold" Padding="0 ,0 , 5, 0" />
                        <TextBlock Text="{Binding PlayerOverview.TotalSalary, StringFormat={}${0:N0}}" FontSize="14" />
                    </StackPanel>

                </StackPanel>

                <StackPanel
                    Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Vertical">
                    <ItemsControl
                        ItemsSource="{Binding PlayerOverview.AggregatedAwards}"
                        ItemTemplateSelector="{StaticResource AwardTemplateSelector}"
                        FlowDirection="LeftToRight"
                        FontWeight="Bold"
                        Margin="5">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
                
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Vertical"
                    Visibility="{Binding CareerBattingVisibility}"
                    Margin="0, 10, 0, 0">
                    <TextBlock FontSize="14" Text="Career Batting" FontWeight="Bold" />
                    <DataGrid
                        ItemsSource="{Binding PlayerOverview.PlayerCareerBatting}"
                        AutoGenerateColumns="True"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserSortColumns="False"
                        CanUserResizeColumns="False"
                        SelectionMode="Single" />
                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Vertical"
                    Visibility="{Binding CareerPitchingVisibility}"
                    Margin="0, 10, 0, 0">
                    <TextBlock FontSize="14" Text="Career Pitching" FontWeight="Bold" />
                    <DataGrid
                        ItemsSource="{Binding PlayerOverview.PlayerCareerPitching}"
                        AutoGenerateColumns="True"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserSortColumns="False"
                        CanUserResizeColumns="False"
                        SelectionMode="Single" />
                </StackPanel>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="{Binding BatterGridRow}"
                    Visibility="{Binding OverallBattingVisibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="500" />
                        <RowDefinition MaxHeight="500"></RowDefinition>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" Visibility="{Binding SeasonBattingVisibility}">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="14" Text="Season Batting" FontWeight="Bold" />
                            <DataGrid
                                Name="PlayerSeasonBattingDataGrid"
                                ItemsSource="{Binding PlayerOverview.PlayerSeasonBatting}"
                                AutoGenerateColumns="True"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                CanUserReorderColumns="False"
                                CanUserSortColumns="True"
                                CanUserResizeColumns="True"
                                SelectionMode="Single" />
                        </StackPanel>
                    </ScrollViewer>

                    <ScrollViewer Grid.Row="1" Visibility="{Binding PlayoffBattingVisibility}">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="14" Text="Playoff Batting" FontWeight="Bold" />
                            <DataGrid
                                Name="PlayerPlayoffBattingDataGrid"
                                ItemsSource="{Binding PlayerOverview.PlayerPlayoffBatting}"
                                AutoGenerateColumns="True"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                CanUserReorderColumns="False"
                                CanUserSortColumns="True"
                                CanUserResizeColumns="True"
                                SelectionMode="Single" />
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <Grid
                    Grid.Row="{Binding PitcherGridRow}"
                    Visibility="{Binding OverallPitchingVisibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="500" />
                        <RowDefinition MaxHeight="500" />
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" Visibility="{Binding SeasonPitchingVisibility}">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="14" Text="Season Pitching" FontWeight="Bold" />
                            <DataGrid
                                Name="PlayerSeasonPitchingDataGrid"
                                ItemsSource="{Binding PlayerOverview.PlayerSeasonPitching}"
                                AutoGenerateColumns="True"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                CanUserReorderColumns="False"
                                CanUserSortColumns="True"
                                CanUserResizeColumns="True"
                                SelectionMode="Single" />
                        </StackPanel>
                    </ScrollViewer>

                    <ScrollViewer Grid.Row="1" Visibility="{Binding PlayoffPitchingVisibility}">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="14" Text="Playoff Pitching" FontWeight="Bold" />
                            <DataGrid
                                Name="PlayerPlayoffPitchingDataGrid"
                                ItemsSource="{Binding PlayerOverview.PlayerPlayoffPitching}"
                                AutoGenerateColumns="True"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                CanUserReorderColumns="False"
                                CanUserSortColumns="True"
                                CanUserResizeColumns="True"
                                SelectionMode="Single" />
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <Grid>
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <TextBlock FontSize="14" Text="Player Stats" FontWeight="Bold" />
                        <DataGrid
                            ItemsSource="{Binding PlayerOverview.GameStats}"
                            AutoGenerateColumns="True"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="False"
                            CanUserSortColumns="True"
                            CanUserResizeColumns="True"
                            SelectionMode="Single" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>