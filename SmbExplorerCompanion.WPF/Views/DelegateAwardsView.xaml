                    </TabControl>
                </GroupBox>

                <GroupBox Header="Top Pitchers by Team">
                    <TabControl ItemsSource="{Binding TopPitchersPerTeam}">
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
                                <TextBlock Text="{Binding Key}" />
                            </DataTemplate>
                        </TabControl.ItemTemplate>

                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <DataGrid
                                    ItemsSource="{Binding}"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    CanUserSortColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            CanUserSort="False"
                                            Header="Player Name"
                                            Binding="{Binding PlayerName}" />
                                        <DataGridTextColumn
                                            CanUserSort="False"
                                            Header="Position"
                                            Binding="{Binding DisplayPrimaryPosition}" />
                                        <DataGridTextColumn
                                            CanUserSort="False"
                                            Header="Teams"
                                            Binding="{Binding TeamNames}" />
                                        <DataGridTextColumn
                                            Header="W"
                                            Binding="{Binding Wins}"
                                            CanUserSort="True" />
                                        <DataGridTextColumn
                                            Header="L"
                                            Binding="{Binding Losses}"
                                            CanUserSort="True" />
                                        <DataGridTemplateColumn
                                            CanUserSort="True"
                                            Header="ERA"
                                            SortMemberPath="EarnedRunAverage">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding EarnedRunAverage, StringFormat={}{0:F2}}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn
                                            CanUserSort="True"
                                            Header="FIP"
                                            SortMemberPath="Fip">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Fip, StringFormat={}{0:F2}}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn
                                            Header="SV"
                                            Binding="{Binding Saves}"
                                            CanUserSort="True" />
                                        <DataGridTemplateColumn
                                            CanUserSort="True"
                                            Header="IP"
                                            SortMemberPath="InningsPitched">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding InningsPitched, StringFormat={}{0:F1}}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn
                                            Header="K"
                                            Binding="{Binding Strikeouts}"
                                            CanUserSort="True" />
                                        <DataGridTextColumn
                                            Header="BB"
                                            Binding="{Binding Walks}"
                                            CanUserSort="True" />
                                        <DataGridTemplateColumn
                                            CanUserSort="True"
                                            Header="WHIP"
                                            SortMemberPath="Whip">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Whip, StringFormat={}{0:F2}}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn
                                            CanUserSort="True"
                                            Header="ERA-"
                                            SortMemberPath="EraMinus">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding EraMinus, StringFormat={}{0:F1}}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn
                                            CanUserSort="True"
                                            Header="FIP-"
                                            SortMemberPath="FipMinus">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding FipMinus, StringFormat={}{0:F1}}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn
                                            Header="CG"
                                            Binding="{Binding CompleteGames}"
                                            CanUserSort="True" />
                                        <DataGridTextColumn
                                            Header="CGSO"
                                            Binding="{Binding Shutouts}"
                                            CanUserSort="True" />
                                        <DataGridTemplateColumn
                                            CanUserSort="True"
                                            Header="Cumulative ERA-"
                                            SortMemberPath="WeightedOpsPlusOrEraMinus">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Text="{Binding WeightedOpsPlusOrEraMinus, StringFormat={}{0:F1}}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn
                                            Header="ER"
                                            Binding="{Binding EarnedRuns}"
                                            CanUserSort="True" />
                                        <DataGridTextColumn
                                            Header="TP"
                                            Binding="{Binding TotalPitches}"
                                            CanUserSort="True" />
                                        <DataGridTemplateColumn
                                            CanUserSort="False"
                                            Header="Awards">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <xctk:CheckComboBox
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        DisplayMemberPath="Name"
                                                        ValueMemberPath="Id"

                                                        SelectedItemsOverride="{Binding Awards}">
                                                        <xctk:CheckComboBox.ItemsSource>
                                                            <Binding ElementName="Page"
                                                                     Path="DataContext.PitchingAwards" />
                                                        </xctk:CheckComboBox.ItemsSource>
                                                    </xctk:CheckComboBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                </GroupBox>

                <Button
                    Command="{Binding SubmitAwardeesCommand}"
                    Content="Submit Awards" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>