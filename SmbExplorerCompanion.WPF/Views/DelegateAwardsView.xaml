                                CanUserSort="False" />
                            <DataGridTextColumn
                                Header="HR"
                                Binding="{Binding HomeRuns}"
                                CanUserSort="False" />
                            <DataGridTextColumn
                                Header="BB"
                                Binding="{Binding Walks}"
                                CanUserSort="False" />
