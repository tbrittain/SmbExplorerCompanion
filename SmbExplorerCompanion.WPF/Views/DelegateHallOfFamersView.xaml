<UserControl x:Class="SmbExplorerCompanion.WPF.Views.DelegateHallOfFamersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:SmbExplorerCompanion.WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:DelegateHallOfFamersViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <StackPanel
                DockPanel.Dock="Left"
                Orientation="Horizontal">
                <Label Content="Select a season:" Margin="0, 0, 10, 0" />
                <ComboBox
                    Width="200"
                    ItemsSource="{Binding Seasons}"
                    SelectedItem="{Binding SelectedSeason}"
                    DisplayMemberPath="DisplaySeasonNumber" />
            </StackPanel>
        </DockPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <GroupBox Header="Top Batting Overall">
                    <DataGrid
                        Name="TopBattingCareersDataGrid"
                        IsReadOnly="True"
                        ItemsSource="{Binding TopBattingCareers}"
                        SelectedItem="{Binding SelectedPlayer}"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserSortColumns="True"
                        CanUserResizeColumns="True"
                        SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                CanUserSort="False"
                                Header="Player Name"
                                Binding="{Binding PlayerName}" />
                            <DataGridTextColumn
                                CanUserSort="True"
                                Header="# Seasons"
                                Binding="{Binding NumSeasons}" />
                            <DataGridTextColumn
                                CanUserSort="False"
                                Header="Seasons"
                                Binding="{Binding DisplaySeasons}" />
                            <DataGridCheckBoxColumn
                                Header="Hall of Famer"
                                Binding="{Binding IsHallOfFamer}"
                                IsReadOnly="False" />
                            <DataGridTemplateColumn
                                CanUserSort="True"
                                Header="Career Earnings"
                                SortMemberPath="TotalSalary">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TotalSalary, StringFormat={}${0:N0}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Header="AB"
                                Binding="{Binding AtBats}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="H"
                                Binding="{Binding Hits}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="1B"
                                Binding="{Binding Singles}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="2B"
                                Binding="{Binding Doubles}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="3B"
                                Binding="{Binding Triples}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="HR"
                                Binding="{Binding HomeRuns}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="BB"
                                Binding="{Binding Walks}"
                                CanUserSort="True" />
                            <DataGridTemplateColumn
                                CanUserSort="False"
                                Header="BA">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding BattingAverage, StringFormat={}{0:F3}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Header="R"
                                Binding="{Binding Runs}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="RBI"
                                Binding="{Binding RunsBattedIn}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="SB"
                                Binding="{Binding StolenBases}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="HBP"
                                Binding="{Binding HitByPitch}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="SH"
                                Binding="{Binding SacrificeHits}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="SF"
                                Binding="{Binding SacrificeFlies}"
                                CanUserSort="True" />
                            <DataGridTemplateColumn
                                CanUserSort="False"
                                Header="OBP">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Obp, StringFormat={}{0:F3}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn
                                CanUserSort="False"
                                Header="SLG">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Slg, StringFormat={}{0:F3}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn
                                CanUserSort="False"
                                Header="OPS">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Ops, StringFormat={}{0:F3}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn
                                CanUserSort="False"
                                Header="OPS+">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding OpsPlus, StringFormat={}{0:F1}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Header="E"
                                Binding="{Binding Errors}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="K"
                                Binding="{Binding Strikeouts}"
                                CanUserSort="True" />
                            <DataGridTemplateColumn
                                CanUserSort="True"
                                Header="Cumulative OPS+"
                                SortMemberPath="WeightedOpsPlusOrEraMinus">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding WeightedOpsPlusOrEraMinus, StringFormat={}{0:F1}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Header="Awards"
                                Binding="{Binding DisplayAwards}"
                                CanUserSort="False" />
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <GroupBox Header="Top Pitching Overall">
                    <DataGrid
                        Name="TopPitchingCareersDataGrid"
                        IsReadOnly="True"
                        ItemsSource="{Binding TopPitchingCareers}"
                        SelectedItem="{Binding SelectedPlayer}"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserSortColumns="True"
                        CanUserResizeColumns="True"
                        SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                CanUserSort="False"
                                Header="Player Name"
                                Binding="{Binding PlayerName}" />
                            <DataGridTextColumn
                                CanUserSort="True"
                                Header="# Seasons"
                                Binding="{Binding NumSeasons}" />
                            <DataGridTextColumn
                                CanUserSort="False"
                                Header="Seasons"
                                Binding="{Binding DisplaySeasons}" />
                            <DataGridCheckBoxColumn
                                Header="Hall of Famer"
                                Binding="{Binding IsHallOfFamer}"
                                IsReadOnly="False" />
                            <DataGridTemplateColumn
                                CanUserSort="True"
                                Header="Career Earnings"
                                SortMemberPath="TotalSalary">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TotalSalary, StringFormat={}${0:N0}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Header="W"
                                Binding="{Binding Wins}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="L"
                                Binding="{Binding Losses}"
                                CanUserSort="True" />
                            <DataGridTemplateColumn
                                CanUserSort="False"
                                Header="ERA">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Era, StringFormat={}{0:F2}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn
                                CanUserSort="False"
                                Header="FIP">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Fip, StringFormat={}{0:F2}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn
                                CanUserSort="False"
                                Header="WHIP">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Whip, StringFormat={}{0:F2}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Header="GS"
                                Binding="{Binding GamesStarted}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="SV"
                                Binding="{Binding Saves}"
                                CanUserSort="True" />
                            <DataGridTemplateColumn
                                CanUserSort="True"
                                Header="IP"
                                SortMemberPath="InningsPitched">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding InningsPitched, StringFormat={}{0:F1}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Header="K"
                                Binding="{Binding Strikeouts}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="CG"
                                Binding="{Binding CompleteGames}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="CGSO"
                                Binding="{Binding Shutouts}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="BB"
                                Binding="{Binding Walks}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="H"
                                Binding="{Binding Hits}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="HR"
                                Binding="{Binding HomeRuns}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="ER"
                                Binding="{Binding EarnedRuns}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="TP"
                                Binding="{Binding TotalPitches}"
                                CanUserSort="True" />
                            <DataGridTextColumn
                                Header="HBP"
                                Binding="{Binding HitByPitch}"
                                CanUserSort="True" />
                            <DataGridTemplateColumn
                                CanUserSort="False"
                                Header="ERA-">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding EraMinus, StringFormat={}{0:F2}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn
                                CanUserSort="False"
                                Header="FIP-">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FipMinus, StringFormat={}{0:F2}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn
                                CanUserSort="True"
                                Header="Cumulative ERA-"
                                SortMemberPath="WeightedOpsPlusOrEraMinus">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding WeightedOpsPlusOrEraMinus, StringFormat={}{0:F1}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Header="Awards"
                                Binding="{Binding DisplayAwards}"
                                CanUserSort="False" />
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                
                <Button
                    Command="{Binding SubmitHallOfFamersCommand}"
                    Content="Submit Hall of Famers" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>