                <WpfPlot x:Name="TeamSchedulePlot" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox
                            IsChecked="{Binding IncludeDivisionTeamsInPlot}" />
                        <Label Content="Include entire division" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <CheckBox
                            IsChecked="{Binding IncludeMarginOfVictoryInPlot}" />
