                                <DataGridTextColumn
                                    Header="TP"
                                    Binding="{Binding TotalPitches}"
                                    CanUserSort="True" />
                                <DataGridTextColumn
                                    Header="GS"
                                    Binding="{Binding GamesStarted}"
                                    CanUserSort="True" />
                                <DataGridTextColumn
                                    Header="H"
                                    Binding="{Binding Hits}"
                                    CanUserSort="True" />
                                <DataGridTextColumn
                                    Header="HR"
                                    Binding="{Binding HomeRuns}"
                                    CanUserSort="True" />
                                <DataGridTextColumn
                                    Header="HBP"
                                    Binding="{Binding HitByPitch}"
                                    CanUserSort="True" />
                                <DataGridTextColumn
                                    Header="Awards"
                                    Binding="{Binding DisplayAwards}"
                                    CanUserSort="False" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </ScrollViewer>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>