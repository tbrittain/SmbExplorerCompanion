                <Rectangle Grid.Column="0" Stroke="Red" Margin="5" Height="130" Width="130" />

                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="16" Text="Team name:" FontWeight="Bold" Padding="0 ,0 , 5, 0" />
                        <TextBlock Text="{Binding TeamSeasonDetail.CurrentTeamName}" FontSize="16" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" Text="Season:" FontWeight="Bold" Padding="0 ,0 , 5, 0" />
                        <TextBlock Text="{Binding TeamSeasonDetail.SeasonNum}" FontSize="14" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" Text="Record:" FontWeight="Bold" Padding="0 ,0 , 5, 0" />
                        <TextBlock Text="{Binding TeamSeasonDetail.TeamRecord}" FontSize="14" />
                    </StackPanel>

                    <StackPanel
                        Orientation="Vertical"
                        Visibility="{Binding TeamSeasonDetail.PlayoffVisibility}">
                        <ItemsControl
                            ItemsSource="{Binding TeamSeasonDetail.PlayoffResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Label
                                        Content="{Binding DisplayPlayoffRoundResult}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </Grid>

